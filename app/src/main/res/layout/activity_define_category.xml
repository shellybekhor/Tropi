<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DefineCategory">

    <TextView
        android:id="@+id/textView"
        android:layout_width="410dp"
        android:layout_height="80dp"
        android:background="@color/colorDefaultWindows"
        android:fontFamily="@font/seoge_light"
        android:gravity="bottom"
        android:paddingBottom="5dp"
        android:text="New Plant"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/newPlantTitle"
        android:layout_width="448dp"
        android:layout_height="54dp"
        android:layout_marginTop="124dp"
        android:text="Choose a category"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/plantNameButton2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/rounded_green_button"
        android:backgroundTint="@color/colorPrimaryGreen"
        android:onClick="createTropic"
        android:text="tropic"
        android:textColor="@color/colorText"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/locationButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPlantTitle" />

    <Button
        android:id="@+id/plantNameButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_green_button"
        android:backgroundTint="@color/colorPrimaryGreen"
        android:onClick="createSucculent"
        android:text="socculent"
        android:textColor="@color/colorText"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/locationButton"
        app:layout_constraintEnd_toStartOf="@+id/plantNameButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPlantTitle" />

    <Button
        android:id="@+id/plantNameButton3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_green_button"
        android:backgroundTint="@color/colorPrimaryGreen"
        android:onClick="createSpices"
        android:text="spices"
        android:textColor="@color/colorText"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/locationButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plantNameButton2"
        app:layout_constraintTop_toBottomOf="@+id/newPlantTitle" />

    <Button
        android:id="@+id/locationButton"
        android:layout_width="374dp"
        android:layout_height="90dp"
        android:background="@drawable/rounded_green_button"
        android:backgroundTint="@color/colorPrimaryGreen"
        android:onClick="findCategory"
        android:text="I don't know the category"
        android:textColor="@color/colorText"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPlantTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>

