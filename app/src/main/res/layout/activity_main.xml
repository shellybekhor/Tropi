<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDefaultBackground"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/plantsToDoList"
        android:layout_width="346dp"
        android:layout_height="354dp"
        android:layout_marginStart="28dp"
        android:background="@color/colorDefaultWindows"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.392">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:id="@+id/tropyTipTitle"
        android:layout_width="101dp"
        android:layout_height="30dp"
        android:text="Tropy Tip"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/tropyTipText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69" />

    <TextView
        android:id="@+id/tropyTipText"
        android:layout_width="342dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorDefaultWindows"
        android:text="Put your succulents in direct sun today"
        app:layout_constraintBottom_toTopOf="@+id/plantsToDoList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/myPlantsButton"
        android:layout_width="348dp"
        android:layout_height="87dp"
        android:text="My Plants"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plantsToDoList"
        app:layout_constraintVertical_bias="0.133" />

    <Button
        android:id="@+id/addPlantButton"
        android:layout_width="91dp"
        android:layout_height="65dp"
        android:text="+"
        android:textSize="25sp"
        android:onClick="addNewPlantButtonClicking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myPlantsButton"
        app:layout_constraintVertical_bias="0.352" />

</androidx.constraintlayout.widget.ConstraintLayout>